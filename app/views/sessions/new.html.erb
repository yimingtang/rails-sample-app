<% provide(:title, "Sign In") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="form-header">Sign In</h2>
    <%= form_for(:session, url: sessions_path, html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email Address" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
      </div>

      <%= f.submit "SIGN IN", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <p class="form-footer">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
