<% provide(:title, "Sign In") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="form-header">Sign In</h2>
    <%= form_tag(sessions_path, role: "form") do %>
      <div class="form-group">
        <%= email_field_tag :email, nil, class: "form-control input-lg", placeholder: "Email Address" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: "form-control input-lg", placeholder: "Password" %>
      </div>

      <%= submit_tag "SIGN IN", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
    <p class="form-footer">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
